.search-box
  display inline-block
  width 600px
  height 40px
  position relative
  background-color #fff
  box-shadow 0 1px 1px 1px rgba(0, 0, 0, 0.2)
  position relative

.search-box .input-box
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  border 0
  width 100%
  padding 10px 50px 10px 10px
  box-sizing border-box

.search-box .search-button
  position absolute
  right 0
  top 0
  bottom 0
  border 0
  width 50px
  padding 0
  cursor pointer
  background-color transparent
  box-sizing border-box

.search-icon
  position relative
  display inline-block
  height 20px
  width 20px

  &:before
    position absolute
    content " "
    height 60%
    width 60%
    left 0
    top 0
    border-radius 50%
    border 3px solid #333

  &:after
    position absolute
    content " "
    height 35%
    width 3px
    right 0
    bottom 0
    background-color #333
    transform rotate(-50deg)
